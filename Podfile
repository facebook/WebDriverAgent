source 'https://github.com/CocoaPods/Specs.git'

xcodeproj 'WebDriverAgent.xcodeproj'


# UIAutomation Testing

target :WebDriverAgent, :exclusive => true do
  platform :ios, '7.0'
  pod 'KissXML'
  pod 'CocoaAsyncSocket', :podspec => 'CocoaAsyncSocket.podspec'
  pod 'CocoaHTTPServer', :podspec => 'CocoaHTTPServer.podspec.json'
  pod 'RoutingHTTPServer', :podspec => 'RoutingHTTPServer.podspec'
end

target :WebDriverAgentLib, :exclusive => true do
  platform :ios, '7.0'
  pod 'KissXML'
  pod 'CocoaAsyncSocket', :podspec => 'CocoaAsyncSocket.podspec'
  pod 'CocoaHTTPServer', :podspec => 'CocoaHTTPServer.podspec.json'
  pod 'RoutingHTTPServer', :podspec => 'RoutingHTTPServer.podspec'
end

target :WebDriverAgentLibTests, :exclusive => true do
  platform :ios, '7.0'
  pod 'OCMock'
end


